general {
        colors = true
        interval = 5
}

order += "ipv6"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /home"
order += "load"
order += "cpu_temperature 0"
order += "memory"
order += "volume master"
order += "read_file ETH"
# order += "path_exists VPN"
order += "path_exists NORDLYNX"
order += "tztime local"

ipv6 {
  format_down = ""
}
wireless _first_ {
        format_up = "W:%ip (%bitrate)"
        format_down = ""
}

ethernet _first_ {
        format_up = "E:%ip"
        format_down = ""
}
path_exists NORDLYNX {
     # path exists when a VPN tunnel launched by nordvpn is active
     path = "/proc/sys/net/ipv4/conf/nordlynx"
     format = "ğŸ”’"
     format_down = ""
}

read_file ETH {
  format = %content
  format_bad = ""
  path = "~/.local/EthPrice.txt"
  Max_characters = 15

}

